{
  "builders": [
    {
      "type": "qemu",
      "disk_size": "{{ user `disk_size` }}",
      "iso_checksum_url": "{{ user `iso_checksum_url` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_urls": "{{ user `iso_url` }}",
      "disk_compression": true,
      "disk_image": true,
      "headless": true,
      "use_default_display": true,
      "output_directory": "output",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "5m",
      "shutdown_command": "sudo poweroff",
      "vm_name": "frr-{{ user `frr_version` }}-{{ user `build_version` }}.qcow2",
      "qemuargs": [
        ["-m", "{{ user `memory` }}"],
        ["-smp", "cpus={{ user `cpus`}}"],
        ["-cdrom", "cloud.iso"],
        ["-serial", "mon:stdio"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/install.sh",
      "environment_vars": [
        "FRR_VERSION={{ user `frr_version` }}",
        "FRR_PACKAGE_VERSION={{ user `frr_package_version` }}"
      ]
    }
  ],
  "variables": {
    "iso_checksum_url": "http://cloud-images.ubuntu.com/bionic/current/SHA256SUMS",
    "iso_checksum_type": "sha256",
    "iso_url": "http://cloud-images.ubuntu.com/bionic/current/bionic-server-cloudimg-amd64.img",
    "cpus": "1",
    "disk_size": "8192",
    "memory": "512",
    "ssh_password": "frruser",
    "ssh_username": "frruser",
    "frr_version": "6.0.2",
    "frr_package_version": "0.ubuntu18.04.1",
    "build_version": "1"
  }
}
